<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.emf.codegen.ecore.genmodel.presentation.GenModelEditorID?before=open-actions">
         <menu
               icon="icons/opcoach.png"
               id="com.opcoach.menu"
               label="OPCoach">
            <command
                  commandId="com.opcoach.genmodeladdon.generateSourceFolder"
                  style="push"
                  tooltip="Generate a derived source folder extending the default EMF generated one.\nGenerate also the appropriate &apos;override_factory&apos; extension and manage overriden classes.">
            </command>
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="com.opcoach.genmodeladdon.ui.genModelSelected">
               </reference>
            </visibleWhen>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="com.opcoach.genmodeladdon.handlers.GeneratedDerivedSourceFolder"
            id="com.opcoach.genmodeladdon.generateSourceFolder"
            name="Generate Derived Source Folder">
      </command>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="com.opcoach.genmodeladdon.ui.genModelSelected">
         <iterate>
            <instanceof
                  value="org.eclipse.emf.codegen.ecore.genmodel.GenModel">
            </instanceof>
         </iterate>
      </definition>
   </extension>

</plugin>
